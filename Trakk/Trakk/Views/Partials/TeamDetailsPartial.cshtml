@model Trakk.Models.Team
    
<div class="team-widget" id="">
    <div class="team-name col-lg-12">
        <h3>@Model.Name</h3>
        <h5>@Model.Sport.Name</h5>
    </div>

    <div style="background-color: #a1de48; height: 10px;"></div>
    <div class="teamstats detailstats col-lg-12">
        <div>
            <h5>Won</h5>
            <p>@Model.Statistics.Won</p>
        </div>
        <div>
            <h5>Lost</h5>
            <p>@Model.Statistics.Lost</p>
        </div>
        <div>
            <h5>Drawn</h5>
            <p>@Model.Statistics.Drawn</p>
        </div>
        <div>
            <h5>Goals</h5>
            <p>@Model.Statistics.Goals</p>
        </div>
        <div>
            <h5>Conceded</h5>
            <p>@Model.Statistics.Conceded</p>
        </div>
        <div>
            <h5>Played</h5>
            <p>@Model.Statistics.Played</p>
        </div>
        <div>
            <h5>Points</h5>
            <p>@Model.Statistics.Points</p>
        </div>
        <div class="clear"></div>
    </div>
    <h4>Members</h4>
    <ul class="user-list col-lg-12">
        @foreach (var member in @Model.Members)
            {

            <li class="user-widget">
                <div class="image"></div>
                @member.Name
            </li>
        }
    </ul>

    <div class="clear"></div>
</div>
